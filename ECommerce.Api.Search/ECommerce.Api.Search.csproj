    <DockerfileContext>..\ECommerce</DockerfileContext>
    <DockerComposeProjectPath>..\ECommerce\docker-compose.dcproj</DockerComposeProjectPath>
    <IsServiceFabricServiceProject>True</IsServiceFabricServiceProject>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="3.1.32" />
  </ItemGroup>

  <ItemGroup>
    <None Update=".dockerignore">
